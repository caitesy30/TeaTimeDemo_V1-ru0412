@page
@model TeaTimeDemo.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "更改密碼";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
  
}

<h3>@ViewData["Title"]</h3>

<!-- 顯示狀態訊息，例如成功更新密碼 -->
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <!-- 更改密碼表單 -->
        <form method="post">
            <!-- 顯示所有驗證錯誤訊息 -->
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <!-- 舊密碼輸入欄位 -->
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" type="password" placeholder="請輸入當前密碼" />
                <label asp-for="Input.OldPassword">當前密碼</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <!-- 新密碼輸入欄位 -->
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" type="password" placeholder="請輸入新密碼" />
                <label asp-for="Input.NewPassword">新密碼</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <!-- 確認新密碼輸入欄位 -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="請確認新密碼" />
                <label asp-for="Input.ConfirmPassword">確認新密碼</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- 提交按鈕 -->
            <button type="submit" class="w-100 btn btn-lg btn-primary">更改密碼</button>
        </form>
    </div>
</div>

<!-- 引入驗證腳本 -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
