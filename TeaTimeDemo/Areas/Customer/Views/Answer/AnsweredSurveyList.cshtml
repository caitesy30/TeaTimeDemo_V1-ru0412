@model IEnumerable<TeaTimeDemo.Models.AnsweredSurvey>

@{
    ViewData["Title"] = "查看問卷";
}

<h2>查看問卷</h2>

<div class="table-responsive">
    <table id="tblData" class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>類別</th>
                <th>問卷標題</th>
                <th>站別</th>
                <th>描述</th>
                <th>頁數</th>
                <th>建立人</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var AnsweredSurvey in Model)
            {
                <tr>
                    <td>@AnsweredSurvey.Survey.CategoryName</td>
                    <td>@AnsweredSurvey.Survey.Title</td>
                    <td>@AnsweredSurvey.Survey.StationName</td>
                    <td>@AnsweredSurvey.Survey.Description</td>
                    <td>@AnsweredSurvey.Survey.QuestionNum</td>
                    <td>@AnsweredSurvey.Survey.ApplicationUser?.Name</td>

                    <td>
                        <a href="@Url.Action("AnsweredSurveyView", "Answer", new { id = AnsweredSurvey.Id })" class="btn btn-primary mx-2">查看</a>
                        <a href="@Url.Action("DeleteAnsweredSurvey", "Answer", new { id = AnsweredSurvey.Id })" class="btn btn-danger mx-2">刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

