@using Microsoft.Extensions.Localization
@using TeaTimeDemo.Resources
@model IEnumerable<Category>
@inject IStringLocalizer<SharedResource> Localizer
<div class="row pb-3">
    @foreach (var category in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">

                <div class="col-12 p-1" style="border: 1px solid #008cba; border-radius: 5px">
                    <div class="card">
                        <img src="@category.ImageUrl" class="card-img-top rounded"/>

                        <div class="card-body">
                            <div class="p-1">
                                <p class="card-title h5 text-primary">@category.Name</p>
@*                                 <p class="card-title text-secondary"><b>@category.Size</b></p>
 *@                            </div>

                            @* <div class="p-1">
                                <p>價格:<b>$@category.Price.ToString("0.00")</b></p>
                            </div> *@
                        </div>

                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="">Details</a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>