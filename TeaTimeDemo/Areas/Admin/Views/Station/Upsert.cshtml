@{
}
@model StationVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Station.Id" hidden />

    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary"> @(Model.Station.Id != 0 ? "編輯" : "新增")站別</h2>
                    <hr />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Station.Name" class="p-0"></label>
                    <input asp-for="Station.Name" class="form-control" />
                    <span asp-validation-for="Station.Name" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Station.DisplayOrder" class="p-0"></label>
                    <input asp-for="Station.DisplayOrder" class="form-control" />
                    <span asp-validation-for="Station.DisplayOrder" class="text-danger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Station.Remark" class="p-0"></label>
                    <input asp-for="Station.Remark" class="form-control" />
                    <span asp-validation-for="Station.Remark" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Station.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">編輯</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">新增</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Station" asp-action="Index" class="btn btn-secondary border form-control">
                            返回
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}